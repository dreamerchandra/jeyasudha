{
  "extends": [
    "react-app",
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "jsx-a11y",
    "prettier"
  ],
  "rules": {
    "semi": 0,
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "no-underscore-dangle": "off",
    "no-console": "off",
    "prettier/prettier": [
      "error", {
        "printWidth": 85,
        "arrowParens": "always",
        "semi": false,
        "tabWidth": 2,
        "singleQuote": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@Components", "./src/components"],
          ["@Fragments", "./src/fragments"]
        ],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}